{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/registry.schema.json",
  "title": "Swiss DSpace Code Registry Entry",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "institution",
    "repositories"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^ror:[0-9a-z]{9,11}$",
      "description": "Institution ROR ID formatted as ror:XXXXXXXXX"
    },
    "institution": {
      "type": "string",
      "minLength": 1
    },
    "repositories": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "status"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "api_rest": {
            "type": "string",
            "format": "uri",
            "description": "REST API endpoint (e.g., https://repo.example.ch/server/api)"
          },
          "oai_pmh": {
            "type": "string",
            "format": "uri",
            "description": "OAI-PMH endpoint (e.g., https://repo.example.ch/server/oai/request)"
          },
          "software": {
            "type": "string",
            "enum": [
              "dspace",
              "dspace-cris"
            ],
            "description": "Software family running the instance"
          },
          "dspace_version": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "production",
              "pilot",
              "archived"
            ]
          },
          "contact": {
            "type": "string"
          },
          "code": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "type",
                "repo"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "customization",
                    "module",
                    "middleware",
                    "simple-script",
                    "notebook",
                    "dspace-frontend",
                    "dspace-backend"
                  ]
                },
                "repo": {
                  "type": "string",
                  "format": "uri"
                },
                "description": {
                  "type": "string",
                  "description": "Short description of the repository"
                },
                "language": {
                  "type": "string"
                },
                "license": {
                  "type": "string"
                }
              }
            }
          },
          "last_verified": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          }
        }
      }
    }
  }
}